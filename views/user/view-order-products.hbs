<div class="container">
    <div class="row">
        <div class="col-md-6">
            <table class="table table-bordered table-dark">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">name</th>
                        <th scope="col">price</th>
                        <th scope="col">quantity</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orderProducts}}
                    <tr>
                        <td>{{@index}}</td>
                        <td>{{this.product.name}}</td>
                        <td>{{this.product.price}}</td>
                        <td>{{this.quantity}}</td>
                        {{/each}}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>